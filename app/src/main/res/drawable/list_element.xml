<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Фон, якщо потрібен -->
    <gradient
        android:startColor="#212121"
        android:endColor="#1B1B1B"
        android:angle="45"/>
    <!-- Рамка -->
    <stroke
        android:width="1dp"
        android:color="#3C3C3C" /> <!-- Колір бордера -->

    <!-- Заокруглення, якщо хочеш -->
    <corners android:radius="16dp" />
</shape>